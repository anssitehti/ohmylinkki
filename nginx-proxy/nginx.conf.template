
server {
    access_log off;
    listen 80;
    server_name _;
    # Forward /api requests to the backend API
    location /api/ {
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_pass ${API_URL};
    }

    # Forward all other requests to the frontend UI
    location / {
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_pass ${UI_URL};
    }
}
